<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">@color/main_blue</item>
        <item name="android:colorButtonNormal">@color/main_blue</item>
        <item name="android:colorPrimaryDark">@color/color_black_15</item>
        <item name="colorButtonNormal">@color/main_blue</item>
    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.ProgressWhite" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/color_white</item>
    </style>

</resources>
